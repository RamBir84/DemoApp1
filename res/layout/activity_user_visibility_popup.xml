<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_visibility_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_shape"
    android:orientation="horizontal"
    android:weightSum="100" >

    <!-- visibility buttons -->

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="90"
        android:orientation="vertical"
        android:weightSum="100" >

        <!-- visible button -->

        <LinearLayout
            android:id="@+id/visible_button"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="49"
            android:background="@drawable/icon_bg"
            android:orientation="horizontal"
            android:weightSum="100" >

            <ImageView
                android:id="@+id/image_view_visible"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="top|end"
                android:layout_weight="30"
                android:src="@drawable/ic_waldo_green" />

            <TextView
                android:id="@+id/text_view_visible"
                style="@style/listHeader"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center|left"
                android:text="Visible"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <!-- Seperation -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/orange"
            android:orientation="horizontal" >
        </LinearLayout>

        <!-- invisible button -->

        <LinearLayout
            android:id="@+id/invisible_button"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="49"
            android:background="@drawable/icon_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_view_invisible"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="top|end"
                android:layout_weight="30"
                android:src="@drawable/ic_waldo_red" />

            <TextView
                android:id="@+id/text_view_invisible"
                style="@style/listHeader"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center|left"
                android:text="Invisible"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- exit button -->

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_close_visibility_popup"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:background="@color/transparent"
            android:src="@drawable/ic_exit_button_popup" />
    </LinearLayout>

</LinearLayout>